<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#FFF"
    android:layout_height="match_parent"
    tools:context=".utils.landPage">

    <LinearLayout
        android:id="@+id/lina"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/lin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="35dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="45dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="120dp"
            android:layout_weight="2.5"
            android:orientation="vertical"
            android:paddingTop="35dp">


            <ImageButton
                android:id="@+id/career"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_marginBottom="25dp"
                android:layout_weight="1"
                android:background="#FFF"

                android:fadingEdge="horizontal"
                android:fadingEdgeLength="12dp"
                android:padding="1dp"
                android:scaleType="fitStart"
                android:src="@drawable/ic_baseline_amp_stories_24"
                 />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_marginBottom="25dp"
                android:layout_weight="1"
               android:id="@+id/pqBtn"

                android:background="#FFFFFF"
                android:padding="8dp"
                android:scaleType="fitStart"
                android:src="@drawable/pqiconwhite" />

            <ImageButton
                android:id="@+id/cloud"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_marginBottom="25dp"
                android:layout_weight="1"
                android:background="#FFFFFF"

                android:padding="11dp"
                android:scaleType="fitStart"
                android:src="@drawable/ic_baseline_cloud_24" />

            <ImageButton
                android:id="@+id/setting"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_marginBottom="25dp"
                android:layout_weight="1"

                android:background="#FFFFFF"
                android:padding="10dp"
                android:scaleType="fitStart"
                android:src="@drawable/spanner"
                android:tint="#00C508" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="15dp"
            android:layout_weight="1"
            android:paddingBottom="12dp"
            android:weightSum="1"
            android:elevation="11dp"
            android:background="#FFF"
            android:orientation="vertical">

            <TextView
                android:id="@+id/topGuy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:paddingVertical="5sp"
                android:shadowColor="#9AFAEDB3"
                android:shadowDy="5"
                android:layout_weight="0.0"
                android:gravity="center_horizontal"
                android:shadowRadius="15"
                android:text="Semester Mode"
                android:textColor="#D59B13"
                android:textSize="20sp"
                android:textStyle="bold" />
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/stayPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0dp"
                android:layout_marginStart="5dp"
                android:layout_gravity="fill"
                android:divider="@color/colornewAccent"
                android:layout_marginBottom="5dp"
                android:layout_weight="0.17"
                android:layout_marginLeft="5dp" />


            <TextView
                android:id="@+id/resume"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
android:background="@drawable/shape"
android:layout_marginTop="7dp"
                android:layout_gravity="center"
                android:layout_weight="0.85"
                android:text="Resume"
android:textStyle="bold"

                android:paddingHorizontal="15dp"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="15dp" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:layout_marginBottom="100dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lina">


        <TextView
            android:id="@+id/landname"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="bottom"
            android:paddingStart="15dp"
            android:shadowColor="#B8B8B8"
            android:shadowRadius="15"
            android:shadowDy="4"
            android:shadowDx="7"
            android:paddingLeft="15dp"
            android:text="Musa"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="14"

            android:gravity="start"
            android:text="Ibrahim"
            android:textColor="#2C2C2C"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="5"
            android:gravity="end"

            android:paddingEnd="15dp"
            android:paddingRight="15dp"
            android:text="Lv200"
            android:textColor="@color/colorAccent"
            android:textSize="23dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical"
        android:layout_marginHorizontal="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lin"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="15dp"
            android:text="Economics"
android:layout_weight="1"
            android:textColor="@color/colorAccent"
            android:textSize="15dp"
            android:shadowColor="#DDDDDD"
            android:shadowRadius="5"
            android:shadowDy="9"
            android:shadowDx="7"
            android:paddingLeft="15dp" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_gravity="center"
            android:indeterminate="true"
            android:background="@drawable/shape4"
            android:indeterminateDrawable="@drawable/fg"
            android:layout_marginHorizontal="19dp"
            android:layout_marginTop="45dp"
            android:layout_marginBottom="25dp"
            android:layout_weight="1" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>